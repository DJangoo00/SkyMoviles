<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurante6"
    tools:openDrawer="start"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:id="@+id/drawer_layout">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        app:title="Restaurante SKY"
        android:elevation="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="210dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnplatos"
                android:layout_weight="1"
                android:background="@drawable/degradado"
                android:height="100dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="platos"
                android:text="PLATOS"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btnbebidas"
                android:background="@drawable/degradado"
                android:onClick="bebidas"
                android:text="BEBIDAS"
                android:height="100dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_weight="1"
                android:id="@+id/btnpostres"
                android:background="@drawable/degradado"
                android:onClick="postres"
                android:text="POSTRES"
                android:height="100dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btngalerias"
                android:background="@drawable/degradado"
                android:onClick="galerias"
                android:text="GALERIA"
                android:height="100dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:id="@+id/btnempresa"
                android:background="@drawable/degradado"
                android:onClick="empresa"
                android:text="QUIENES SOMOS"
                android:height="100dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnexperiencias"
                android:background="@drawable/degradado"
                android:onClick="experiencia"
                android:text="EXPERIENCIAS"
                android:height="100dp"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/nav_menu"/>



</androidx.drawerlayout.widget.DrawerLayout>