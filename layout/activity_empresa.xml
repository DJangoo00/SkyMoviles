<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".EmpresaActivity">
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="NOSOTROS"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14dp"
                android:text="En el restaurante SKY nuestra exclusividad, exquisita gastronomía, ubicación e inigualable vista nos destaca como uno de los sitios predilectos para celebraciones sociales y corporativas. Además de nuestro ambiente de ensueño, ofrecemos menús especiales tipo buffet o plato servido, una completa asesoría sin costo alguno, y todo lo necesario para que cada evento sea un éxito."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="EVENTOS"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Somos cómplices de tus momentos especiales"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="14dp"
                android:gravity="center"/>
            <TextView
                android:textSize="14dp"
                android:text="Cada rincón de nuestro restaurante tiene un toque mágico que servirá para destacar tus encuentros más importantes, creando historias inolvidables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                android:src="@drawable/tarta_de_queso"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>